<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.epam.grabar.entity.Room" table="ROOM">

        <id name="number" type="java.lang.Integer">
            <column name="NUMB" />
            <generator class="increment"/>
        </id>

        <property name="capacity" type="java.lang.Integer">
            <column name="CAPACITY" length="15" not-null="true"/>
        </property>

        <property name="price" type="java.lang.Integer">
            <column name="PRICE" not-null="true"/>
        </property>

        <property name="free" type="java.lang.Boolean">
            <column name="FREE" not-null="true"/>
        </property>

    </class>

</hibernate-mapping>